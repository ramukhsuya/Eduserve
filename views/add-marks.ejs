<%- include('partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 style="font-family: 'Roboto', sans-serif; font-size: 1.8rem;">Add Marks</h3>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          
          <form action="/marks/add" method="POST">
            <!-- Exam Type -->
            <div class="mb-3">
              <label for="examType" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Exam Type</label>
              <select class="form-select" id="examType" name="examType" required>
                <option value="" disabled selected>Select Exam Type</option>
                <option value="Unit Test">Unit Test</option>
                <option value="Mid Term">Mid Term</option>
                <option value="End Term">End Term</option>
                <option value="Quiz">Quiz</option>
                <option value="Assignment">Assignment</option>
              </select>
            </div>

            <!-- Subject -->
            <div class="mb-3">
              <label for="subject" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter Subject Name" required>
            </div>

            <!-- Marks -->
            <div class="mb-3">
              <label for="marksObtained" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Marks Obtained</label>
              <input type="number" step="0.01" class="form-control" id="marksObtained" name="marksObtained" placeholder="Enter Marks Obtained" required>
            </div>

            <!-- Total Marks -->
            <div class="mb-3">
              <label for="totalMarks" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Total Marks</label>
              <input type="number" step="0.01" class="form-control" id="totalMarks" name="totalMarks" placeholder="Enter Total Marks for Exam" required>
            </div>

            <!-- Date -->
            <div class="mb-3">
              <label for="dateOfExam" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Date of Exam</label>
              <input type="date" class="form-control" id="dateOfExam" name="dateOfExam" value="<%= new Date().toISOString().split('T')[0] %>" required>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Description (Optional)</label>
              <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>

            <!-- Buttons -->
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Add Marks</button>
              <a href="/dashboard" class="btn btn-outline-secondary" style="font-family: 'Roboto', sans-serif; font-size: 1.2rem;">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
