<%- include('partials/header') %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card-signup shadow">
            <div class="card-header text-white bg-primary">
                <h3 class="card-title mb-0">Create an Account</h3>
            </div>
            <div class="card-body">
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                
                <!-- Signup Form -->
                <form action="/signup" method="POST">
                    <!-- Full Name -->
                    <div class="mb-2">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" name="fullName" 
                               value="<%= typeof fullName !== 'undefined' ? fullName : '' %>" required>
                    </div>
                    
                    <!-- Email Address -->
                    <div class="mb-2">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" 
                               value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                        <div class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    
                    <!-- Password -->
                    <div class="mb-2">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    
                    <!-- Confirm Password -->
                    <div class="mb-2">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    </div>
                    
                    <!-- Terms and Conditions -->
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                        <label class="form-check-label agree" for="terms">
                            I agree to the 
                            <a href="/terms" style="color: #5dd7c3;">Terms and Conditions</a>.
                        </label>
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </form>
            </div>

            <!-- Footer Section -->
            <div class="card-footer text-center">
                <p>Already have an account? 
                   <a href="/login">Login here</a>.
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
